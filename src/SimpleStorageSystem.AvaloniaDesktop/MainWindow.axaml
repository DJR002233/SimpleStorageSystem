<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="SimpleStorageSystem.AvaloniaDesktop.Views.MainWindow"
    xmlns:vm="using:SimpleStorageSystem.AvaloniaDesktop.ViewModels"
    x:DataType="vm:MainWindowViewModel"
    WindowStartupLocation="CenterScreen"
    Title="SimpleStorage"

    xmlns:rxui="http://reactiveui.net"
    
    xmlns:app="using:SimpleStorageSystem.AvaloniaDesktop.Handler">
    <!-- xmlns:views="using:SimpleStorageSystem.AvaloniaDesktop.Views"
    xmlns:viewsAuth="using:SimpleStorageSystem.AvaloniaDesktop.Views.Auth"
    xmlns:viewsMain="using:SimpleStorageSystem.AvaloniaDesktop.Views.Main" -->
    <rxui:RoutedViewHost x:Name="RoutedViewHost">
        <rxui:RoutedViewHost.DefaultContent>
            <Grid ColumnDefinitions="Auto" RowDefinitions="*,Auto,*,Auto,*"
            HorizontalAlignment="Center">
                <TextBlock Text="Simple Storage Desktop App" 
                FontSize="26"
                Grid.Column="0" Grid.Row="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" />

                <TextBlock Text="Loading..."
                FontSize="18"
                Grid.Column="0" Grid.Row="3"
                HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </rxui:RoutedViewHost.DefaultContent>
        <rxui:RoutedViewHost.ViewLocator>
            <app:AppViewLocator />
        </rxui:RoutedViewHost.ViewLocator>
    </rxui:RoutedViewHost>
</Window>
