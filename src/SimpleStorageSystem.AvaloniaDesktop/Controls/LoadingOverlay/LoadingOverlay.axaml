<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="SimpleStorageSystem.AvaloniaDesktop.Controls.LoadingOverlay"
    xmlns:local="using:SimpleStorageSystem.AvaloniaDesktop.Controls">

    <Border Background="#80000000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsVisible="{Binding Visible, RelativeSource={RelativeSource AncestorType=local:LoadingOverlay}}">
        <!-- <Border.Transitions>
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.25" />
            </Transitions>
        </Border.Transitions> -->

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar Width="150" IsIndeterminate="True"/>
            <TextBlock Text="{Binding Message, RelativeSource={RelativeSource AncestorType=local:LoadingOverlay}}"
                       Foreground="White"
                       FontSize="16"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
