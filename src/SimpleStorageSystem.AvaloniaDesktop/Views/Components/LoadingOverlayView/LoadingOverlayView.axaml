<UserControl xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
x:Class="SimpleStorageSystem.AvaloniaDesktop.Views.Components.LoadingOverlayView"

xmlns:vm="using:SimpleStorageSystem.AvaloniaDesktop.ViewModels.Components"
x:DataType="vm:LoadingOverlayViewModel">
    <Border Background="#80000000"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- <Border.Transitions>
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.25" />
            </Transitions>
        </Border.Transitions> -->

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar Width="150" IsIndeterminate="True"/>
            
            <TextBlock x:Name="MessageTextBlock"
            Foreground="White"
            FontSize="16"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
