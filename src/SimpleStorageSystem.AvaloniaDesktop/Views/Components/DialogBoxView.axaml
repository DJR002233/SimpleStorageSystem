<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SimpleStorageSystem.AvaloniaDesktop.Views.Components.DialogBoxView"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Title="Title">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3">
        <StackPanel VerticalAlignment="Center" Margin="10" Spacing="10">

            <TextBlock x:Name="MessageTextBlock" FontSize="14" TextWrapping="Wrap"/>

            <TextBox x:Name="InputTextBox" FontSize="14" TextWrapping="Wrap" Watermark=""
            MinWidth="200" IsVisible="False"/>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                <Button x:Name="OkButton" Content="Ok" 
                Width="80" IsVisible="False"
                HorizontalAlignment="Right"
                Click="Ok"/>
            
                <Button x:Name="ConfirmButton" Content="Confirm" 
                Width="80" IsVisible="False"
                HorizontalAlignment="Right"
                Click="Confirm"/>

                <Button x:Name="CancelButton" Content="Cancel" 
                Width="80" IsVisible="False"
                Margin="5,0,0,0" HorizontalAlignment="Right"
                Click="Close"/>

            </StackPanel>

        </StackPanel>
    </Border>
</Window>
