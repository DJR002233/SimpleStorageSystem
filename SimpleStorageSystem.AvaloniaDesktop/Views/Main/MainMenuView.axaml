<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SimpleStorageSystem.AvaloniaDesktop.ViewModels.Main"
    d:DesignWidth="800" d:DesignHeight="450"
    x:Class="SimpleStorageSystem.AvaloniaDesktop.Views.Main.MainMenuView"
    x:DataType="vm:MainMenuViewModel"
    
    xmlns:components="using:SimpleStorageSystem.AvaloniaDesktop.Views.Components">
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <Grid ColumnDefinitions="Auto,Auto" 
            HorizontalAlignment="Center"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="20" MaxHeight="100"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Main Menu"
            Grid.ColumnSpan="2" Grid.Row="0" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            FontSize="24"/>

            <Button x:Name="TestButton" Content="Test Button"
            Grid.ColumnSpan="2" Grid.Row="5" 
            VerticalAlignment="Center" HorizontalAlignment="Center" 
            Margin="0,15,0,35"/>
        </Grid>
        <components:LoadingOverlay x:Name="LoadingOverlay"/>
    </Grid>
</UserControl>
